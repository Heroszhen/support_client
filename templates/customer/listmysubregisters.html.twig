{% extends 'base.html.twig' %}
{% block title %}Liste{% endblock %}
{% block body %}

<div id="listusers">
<div class="container pb-2" >
    <h2 class="text-center mt-2 mb-4">Tous mes sous-comptes</h2>
    <div class="row justify-content-center">
        <div class="col-12">
            <table class="table">
            <thead class="thead-dark">
                <tr>
                <th scope="col">
                    <div class="leftdisplay">
                        <div class="mr-1">Id</div>
                        <div class="mr-1 pointer">
                            <a href="{{ path('listeusers',{'field':'id','order':'asc'}) }}" class="text-white">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-up" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
                                </svg>
                            </a>
                        </div>
                        <div class="mr-1 pointer">
                            <a href="{{ path('listeusers',{'field':'id','order':'desc'}) }}" class="text-white">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-down" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z"/>
                                </svg>
                            </a>
                        </div>
                    <div>
                </th>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Email</th>
                <th scope="col">Rôles</th>
                <th scope="col">Date de création</th>
                <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in allusers %}
                <tr>
                    <th scope="row">
                        <a href="{{ path('oneuser',{'id':user.id}) }}">{{ user.id }}</a>
                        {% if user.id == app.user.id %}
                            (moi)
                        {% endif %}
                    </th>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% for one in user.roles %}
                            {{ one }} ;
                        {% endfor %}
                    </td>
                    <td>{{ user.created|date("m/d/Y h:i:s")  }}</td>
                    <td>
                        <a href="{{ path('modifuser',{'id':user.id}) }}" class="btn btn-info btn-sm mb-1">Modifier</a>
                        <br>
                        <a href="" class="btn btn-danger btn-sm">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            </table>
        </div>
    </div>
</div>
</div>
{% endblock %}
