{% extends 'base.html.twig' %}

{% block body %}

<div id="listtickets">
<div class="container-fluid pb-2" >
    <h2 class="text-center mt-2 mb-4">Tous les tickets</h2>
    <div class="row justify-content-center">
        <div class="col-12">
            <table class="table">
            <thead class="thead-dark">
                <tr>
                <th scope="col">Id</th>
                <th scope="col">Titre</th>
                <th scope="col">Auteur</th>
                <th scope="col">Description</th>
                <th scope="col">
                    <div class="leftdisplay">
                        <div class="mr-1">Priorité</div>
                        <div class="mr-1 pointer">
                            <a href="{{ path('alltickets',{'field':'priority','order':'asc'}) }}" class="text-white">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-up" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
                                </svg>
                            </a>
                        </div>
                        <div class="mr-1 pointer">
                            <a href="{{ path('alltickets',{'field':'priority','order':'desc'}) }}" class="text-white">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-down" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z"/>
                                </svg>
                            </a>
                        </div>
                    <div>
                </th>
                <th scope="col">
                    <div class="leftdisplay">
                        <div class="mr-1">Status</div>
                        <div class="mr-1 pointer">
                            <a href="{{ path('alltickets',{'field':'status','order':'asc'}) }}" class="text-white">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-up" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
                                </svg>
                            </a>
                        </div>
                        <div class="mr-1 pointer">
                            <a href="{{ path('alltickets',{'field':'status','order':'desc'}) }}" class="text-white">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-down" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z"/>
                                </svg>
                            </a>
                        </div>
                    <div>
                </th>
                <th>
                    Services
                </th>
                <th scope="col">Date de création</th>
                <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for one in list %}
                <tr>
                    <th scope="row">
                        {{ one.id }}
                    </th>
                    <td>{{ one.title  }}</td>
                    <td>{{ one.author.lastname  }} {{ one.author.firstname  }}</td>
                    <td>{{ one.description  }}</td>
                    <td>
                        {{ one.priority  }}
                    </td>
                    <td>
                        {{ one.status }}
                    </td>
                    <td>
                        {% for one2 in one.services %}
                            {{ one2.name }} ,
                        {% endfor %}   
                    </td>
                    <td>{{ one.created|date("m/d/Y h:i:s")  }}</td>
                    <td>
                        
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            </table>
        </div>
    </div>
</div>
</div>
{% endblock %}
