{% extends 'base.html.twig' %}

{% block body %}

<div id="listtickets">
<div class="container pb-2" >
    <h2 class="text-center mt-2 mb-4">Tous les tickets</h2>
    <div class="row justify-content-center">
        <div class="col-12">
            <table class="table">
            <thead class="thead-dark">
                <tr>
                <th scope="col">Id</th>
                <th scope="col">Titre</th>
                <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for one in list %}
                <tr>
                    <th scope="row">
                        {{ one.id }}
                    </th>
                    <td>{{ one.name }}</td>
                   
                    <td>
                        <a href="{{ path('createservice',{'id':one.id}) }}" class="btn btn-info btn-sm mb-1">Modifier</a>
                        <br>
                        <a href="" class="btn btn-danger btn-sm">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            </table>
        </div>
    </div>
</div>
</div>
{% endblock %}
